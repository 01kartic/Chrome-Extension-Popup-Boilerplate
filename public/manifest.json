{
  "manifest_version": 3,
  "name": "Chrome Extension Popup Boilerplate",
  "version": "1.0",
  "description": "Chrome Extension Popup Boilerplate with React, React-router and Tailwind CSS",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}